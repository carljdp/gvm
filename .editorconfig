root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true

# Meh - it's an attempt to make the file more readable in the editor,
# and to work in conjunction with intent highlighters. so it's not
# really required.
trim_trailing_whitespace = false

[*.py]
max_line_length = 120
